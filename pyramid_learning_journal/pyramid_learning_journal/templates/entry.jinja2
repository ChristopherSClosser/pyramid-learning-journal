{% extends 'home.jinja2' %}

{% block content %}
<h2>Add a new entry:</h2>

<form class="new_entry" method="POST">
  <p>
    <label for="title">Title: </label>
    <input type="text" name="title">
  </p>
  <p>
    <label for="markdown">Entry</label>
    <textarea type="text" name="markdown" value=''></textarea>
  </p>
  <p>
    <input type="submit" name="Add Entry">
  </p>
</form>

{% endblock %}
