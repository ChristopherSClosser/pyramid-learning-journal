{% extends 'home.jinja2' %}

{% block content %}

<section>
  <h2>Add a new entry:</h2>

  <form class="new_entry" method="POST">
    <p>
      <label for="title">Title: </label>
      <input type="text" name="title">
    </p>
    <br>
    <p class="text">
      <label for="markdown">Entry: </label>
      <textarea type="text" name="markdown"></textarea>
    </p>
    <br>
    <p>
      You are not authenticated...<br>You may not add or edit an entry.
    </p>
  </form>
</section>

{% endblock %}
