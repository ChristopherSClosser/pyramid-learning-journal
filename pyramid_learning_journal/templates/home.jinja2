<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Journal</title>
    <link rel="shortcut icon" href="{{request.static_url('pyramid_learning_journal:static/favicon2.ico')}}" type="image/x-icon">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Permanent+Marker" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link href="{{request.static_url('pyramid_learning_journal:static/base.css')}}" rel="stylesheet">
    <link href="{{request.static_url('pyramid_learning_journal:static/theme.css')}}" rel="stylesheet">
    <link href="{{request.static_url('pyramid_learning_journal:static/modules.css')}}" rel="stylesheet">
  </head>
  <body class="noscroll">
    <header class="header nav-down">
      <div class="my-name">
        Journal:
      </div>
      <button class="burger">&#9776;</button>
      <div class="ckata">
        <a href="https://www.codewars.com/users/moredrums">
          <img class="kata" src="https://www.codewars.com/users/moredrums/badges/micro" alt="codewars badge">
        </a>
      </div>
      <div class="linked">
        <a href='https://www.linkedin.com/in/christophersclosser'>
          <img class="ilinked" src="{{request.static_url('pyramid_learning_journal:static/Logo-2C-21px-R.png')}}" alt="linkedin">
        </a>
      </div>
      <nav class="hidden main-nav" id="main-nav">
        <ul class="nav">
          <li><a id="home" href="https://chrisclosser.herokuapp.com">Home</a></li>
          <hr>
          <li><a id="github" href="/journal/new-entry">New Entry</a></li>
          {% if entries %}
          <hr>
          <li class="dropdown"><a href="" onclick="return false;">Journals</a>
            <div class="hidden dropdown-content">
              {% for entry in entries %}
                <hr>
                <div><a class="dc" href="#{{ entry.title }}">{{ entry.title }}</a></div>
              {% endfor %}
              <hr><br>
            </div>
          </li>
          {% else %}
            <hr>
            <li class="dropdown"><a id="home" href="/">Journals</a></li>
          {% endif %}
        </ul>
      </nav>
    </header>

    <content class="entries">
      {% block content %}{% endblock %}
      {% if entries %}
        {% for entry in entries %}
          <section id="{{ entry.title }}" class='list' style="display: block;">
            <hr>
            <h3 class="entry-title"><a href="{{ request.route_url('detail', id=entry.id) }}">{{ entry.title }}</a></h2>
            <p class="plain">{{ entry.markdown|safe }}</p><br>
            <p class="date">Created {{ entry.created }}</p>
            <hr><br>

          </section>

        {% endfor %}
      {% endif %}
    </content>
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="{{request.static_url('pyramid_learning_journal:static/script/appJQ.js')}}"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
  <script>hljs.initHighlightingOnLoad();</script>
</html>
