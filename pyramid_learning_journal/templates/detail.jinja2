{% extends 'home.jinja2' %}

{% block content %}

<section class="entry">
  <h3 class="entry-title">{{ entry.title }}</h3>
  <hr />
  <button><a href="{{ request.route_url('edit', id=entry.id) }}">Edit</a></button>
  <br>
  <p>{{ entry.markdown|safe }}</p><br>
  <p class="date">Created {{ entry.created }} </p>
  <hr><br>
</section>

{% endblock %}
