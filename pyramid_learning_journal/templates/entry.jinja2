
{% extends 'home.jinja2' %}

{% block content %}
<section>
  <h2>Add a new entry:</h2>

  <form class="new_entry" method="POST">
    <p>
      <label for="title">Title: </label>
      <input type="text" name="title">
    </p>
    <br>
    <p>
      <label for="markdown">Entry</label>
      <textarea type="text" name="markdown"></textarea>
    </p>
    <br>
    <p>
      <input type="submit" name="Add Entry">
    </p>
  </form>
</section>

{% endblock %}
