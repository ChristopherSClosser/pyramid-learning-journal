{% extends 'home.jinja2' %}

{% block content %}

<section>
  <h3 class="entry-title">Add a New Entry:</h2>

  <form class="new_entry" method="POST">
    <p>
      <label for="title">Title: </label>
      <input type="text" name="title">
    </p>
    <br>
    <p class="text">
      <label for="markdown">Entry: </label>
      <textarea type="text" name="markdown"></textarea>
    </p>
    <br>
    <p>
      <input type="submit" name="Add Entry">
    </p>
  </form>
</section>

{% endblock %}
