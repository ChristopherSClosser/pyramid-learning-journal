{% extends 'home.jinja2' %}

{% block content %}

<section>
  <h1>Edit entry:</h1>
  <form method="POST">
      <p>
          <label for="title">Title: </label>
          <input type="text" name="title" value="{{ entry.title }}"/>
      </p>
      <br>
      <p class="text">
          <label for="markdown">Body: </label>
          <textarea type='text' name="markdown">{{ entry.markdown|safe }}</textarea>
      </p>
      <br>
      <p>
        You are not authenticated...<br>You may not edit this entry.
      </p>
  </form>
</section>

{% endblock %}
