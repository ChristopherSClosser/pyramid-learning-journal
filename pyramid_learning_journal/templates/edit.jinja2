{% extends 'home.jinja2' %}

{% block content %}

<section>
  <h1>Edit entry:</h1>
  <form method="POST">
      <p>
          <label for="title">Title: </label>
          <input type="text" name="title" value="{{ entry.title }}"/>
      </p>
      <br>
      <p>
          <label for="markdown">Body: </label>
          <textarea type='text' name="markdown">{{ entry.markdown|safe }}</textarea>
      </p>
      <br>
      <p>
          <input disabled type="submit" name="Edit Entry" />
      </p>
  </form>
</section>

{% endblock %}
